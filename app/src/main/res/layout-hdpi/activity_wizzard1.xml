<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:src="@drawable/logo_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/mediumGray"
            android:text="Paso 1"
            android:gravity="center" />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/mediumGray"
            android:text="Paso 2"
            android:gravity="center" />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/mediumGray"
            android:text="Paso 3"
            android:gravity="center" />
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/mediumGray"
            android:text="Paso 4"
            android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="4dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/highlitgh_left_gray">
        </LinearLayout>
        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="4dp"
            android:layout_marginRight="2dp"
            android:background="@color/mediumGray">
        </LinearLayout>
        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="4dp"
            android:layout_marginRight="2dp"
            android:background="@color/mediumGray">
        </LinearLayout>
        <LinearLayout
            android:layout_width="68dp"
            android:layout_height="4dp"
            android:background="@drawable/highlitgh_right_gray">
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="@color/colorAccent"
            android:text="Â¡Te damos la bienvenida!"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:text="Antes de comenzar a jugar es necesario realizar unos paso de calentamiento"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/left_arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/greenApple"
                android:text="PONTE LA CAMISETA"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/right_arrow"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="Todos tenemos un equipo del alma,"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="selecciona el tuyo"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/buttonLiga"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginRight="4dp"
                android:textSize="11dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/text_white_rounded"
                android:gravity="center"
                android:padding="5dp"
                android:text="Ligas"/>
            <TextView
                android:id="@+id/buttonEquipo"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_marginLeft="4dp"
                android:textSize="11dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/text_white_rounded"
                android:gravity="center"
                android:padding="5dp"
                android:text="Equipos"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageEquipoAlma"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/image_circle_green"
                android:src="@drawable/venezuela"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:textSize="11dp"
                android:textStyle="bold"
                android:text="SIGUIENTE"
                android:gravity="center"
                android:textColor="@color/greenApple"
                android:background="@drawable/border_green_rounded"
                android:id="@+id/buttonSiguiente" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>