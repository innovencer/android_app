<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="bottom"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:weightSum="5">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="onClickBottomMenu"
            android:id="@+id/menuFanaticada">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/fanaticada_white_icon"
                android:id="@+id/imageFanaticada" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="1dp"
                android:textSize="8dp"
                android:text="RANKING"
                android:id="@+id/textMenu1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="onClickBottomMenu"
            android:id="@+id/menuPartidos">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:tint="@color/greenApple"
                android:src="@drawable/camisa_icon"
                android:id="@+id/imagePartidos" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/greenApple"
                android:layout_marginTop="1dp"
                android:textSize="8dp"
                android:text="NIVEL"
                android:id="@+id/textMenu2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="onClickBottomMenu"
            android:id="@+id/menuEquipos">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/star_icon"
                android:id="@+id/imageEquipos" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="1dp"
                android:textSize="8dp"
                android:text="TROFEOS"
                android:id="@+id/textMenu3" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="onClickBottomMenu"
            android:id="@+id/menuRanking">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/ranking_logo"
                android:id="@+id/imageRanking" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="1dp"
                android:textSize="8dp"
                android:text="ACIERTOS"
                android:id="@+id/textMenu4" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="onClickBottomMenu"
            android:id="@+id/menuAmigos">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="centerInside"
                android:src="@drawable/amigos_icon"
                android:id="@+id/imageAmigos" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="1dp"
                android:textSize="8dp"
                android:text="GANADORES"
                android:id="@+id/textMenu5" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>