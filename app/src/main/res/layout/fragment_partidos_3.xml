<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3.75"
            android:textColor="@color/colorAccent"
            android:textSize="13dp"
            android:textStyle="bold"
            android:text="POR JUGAR"
            android:gravity="center"
            android:background="@color/white10"
            android:id="@+id/buttonPorJugar" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="2.5"
            android:textColor="@color/colorAccent"
            android:textSize="13dp"
            android:textStyle="bold"
            android:text="EN VIVO"
            android:gravity="center"
            android:background="@color/white10"
            android:id="@+id/buttonEnVivo" />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3.75"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:textStyle="bold"
            android:text="FINALIZADO"
            android:gravity="center"
            android:background="@color/black"
            android:id="@+id/buttonFinalizado" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:padding="10dp">
        <TextView
            android:id="@+id/buttonLiga"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginRight="4dp"
            android:textSize="11dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/text_white_rounded"
            android:gravity="center"
            android:padding="5dp"
            android:text="Ligas"/>
        <TextView
            android:id="@+id/buttonEquipo"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginLeft="4dp"
            android:textSize="11dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/text_white_rounded"
            android:gravity="center"
            android:padding="5dp"
            android:text="Equipos"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:paddingBottom="50dp"
        android:clickable="false">
    </ListView>
</LinearLayout>