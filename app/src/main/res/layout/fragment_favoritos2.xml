<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/buttonFavoritos1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo del alma"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favoritos"
                android:paddingTop="10dp"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/linear3">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:tint="@color/colorAccent"
                android:src="@drawable/arrow_up"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/linear4">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitXY"
                android:tint="@color/colorAccent"
                android:src="@drawable/arrow_up"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="-6dp"
        android:background="@drawable/custom_background_right">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/left_arrow"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textColor="@color/greenApple"
                            android:textStyle="bold"
                            android:text="CLUBES QUE TAMBIÉN TE PONEN A CELEBRAR"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/right_arrow"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Selecciona a tus equipos favoritos (máx 8)"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp"
                        android:gravity="center">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:layout_marginRight="7.5dp"
                            android:textColor="@color/colorAccent"
                            android:background="@drawable/text_white_rounded"
                            android:text="Liga"
                            android:id="@+id/buttonLiga" />
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:textSize="14dp"
                            android:gravity="center"
                            android:layout_marginRight="7.5dp"
                            android:textColor="@color/colorAccent"
                            android:background="@drawable/text_white_rounded"
                            android:text="Equipo"
                            android:id="@+id/buttonEquipo" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="15dp"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textColor="@android:color/black"
                        android:background="@drawable/background_green_rounded"
                        android:text="AGREGAR"
                        android:id="@+id/buttonAgregar"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="76dp"
                        android:layout_height="90dp">
                        <ImageView
                            android:id="@+id/imageEquipo1"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@drawable/image_circle_green"
                            android:layout_centerInParent="true"
                            android:src="@drawable/venezuela"
                            />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:tint="@color/black"
                            android:src="@android:drawable/ic_delete"
                            android:id="@+id/imageElimina1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:text="Real Madrid"
                            android:id="@+id/textEquipo1" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="76dp"
                        android:layout_height="90dp">
                        <ImageView
                            android:id="@+id/imageEquipo2"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/image_circle_green"
                            />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:tint="@color/black"
                            android:src="@android:drawable/ic_delete"
                            android:id="@+id/imageElimina2" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:text="Real Madrid"
                            android:id="@+id/textEquipo2" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="76dp"
                        android:layout_height="90dp">
                        <ImageView
                            android:id="@+id/imageEquipo3"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/image_circle_green"
                            />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:tint="@color/black"
                            android:src="@android:drawable/ic_delete"
                            android:id="@+id/imageElimina3" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:text="Real Madrid"
                            android:id="@+id/textEquipo3" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="76dp"
                        android:layout_height="90dp">
                        <ImageView
                            android:id="@+id/imageEquipo4"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/image_circle_green"
                            />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:tint="@color/black"
                            android:src="@android:drawable/ic_delete"
                            android:id="@+id/imageElimina4" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:text="Real Madrid"
                            android:id="@+id/textEquipo4" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="76dp"
                        android:layout_height="90dp">
                        <ImageView
                            android:id="@+id/imageEquipo5"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/image_circle_green"
                            />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:tint="@color/black"
                            android:src="@android:drawable/ic_delete"
                            android:id="@+id/imageElimina5" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:text="Real Madrid"
                            android:id="@+id/textEquipo5" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="76dp"
                        android:layout_height="90dp">
                        <ImageView
                            android:id="@+id/imageEquipo6"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/image_circle_green"
                            />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:tint="@color/black"
                            android:src="@android:drawable/ic_delete"
                            android:id="@+id/imageElimina6" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:text="Real Madrid"
                            android:id="@+id/textEquipo6" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="76dp"
                        android:layout_height="90dp">
                        <ImageView
                            android:id="@+id/imageEquipo7"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/image_circle_green"
                            />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:tint="@color/black"
                            android:src="@android:drawable/ic_delete"
                            android:id="@+id/imageElimina7" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:text="Real Madrid"
                            android:id="@+id/textEquipo7" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="76dp"
                        android:layout_height="90dp">
                        <ImageView
                            android:id="@+id/imageEquipo8"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/image_circle_green"
                            />
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentRight="true"
                            android:tint="@color/black"
                            android:src="@android:drawable/ic_delete"
                            android:id="@+id/imageElimina8" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:text="Real Madrid"
                            android:id="@+id/textEquipo8" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="54dp"
                    android:textSize="11dp"
                    android:textStyle="bold"
                    android:text="GUARDAR"
                    android:gravity="center"
                    android:textColor="@color/greenApple"
                    android:layout_gravity="center"
                    android:background="@drawable/border_green_rounded"
                    android:id="@+id/buttonSiguiente" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>